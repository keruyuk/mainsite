<% provide(:title, "Contact") %>
<div class="content contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="gmap">
          <!-- Google Maps embed code -->
          <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d31680.380160579294!2d110.46950671182485!3d-7.003687220344893!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e708d045753e167%3A0x1344516d794864dd!2sPT+Keruyuk+Media+Utama!5e0!3m2!1sen!2sid!4v1425451146983" width="600" height="450" frameborder="0" style="border:0"></iframe>
        </div>
        <div class="bor"></div>
        <div class="row">
          <div class="col-md-6">
            <div class="cwell">
              <h4 class="title">Contact Form</h4>
              <% flash.each do |name, msg| %>
              <% if msg.is_a?(String) %>
              <% if name == "recaptcha_error" %>
              <div class="alert alert-danger" id="notifikasi">
                  <a href="#" class="close" data-dismiss="alert">&times;</a>
                  <strong>Error!</strong> Invalid captcha.
              <% else %>
              <div class="alert alert-success" id="notifikasi">
                  <a href="#" class="close" data-dismiss="alert">&times;</a>
                  <strong>Success!</strong> Your message has been sent successfully.
              <% end %>
              </div>
              <% end %>
              <% end %>
              <%= form_tag(send_mail_path) do %>
              <div class="form-group">
                  <%= label_tag 'name', 'Name' %>
                  <%= text_field_tag 'name', nil, class: 'form-control', required: 'required', placeholder: 'Your Name' %>
              </div>
              <div class="form-group">
                 <%= label_tag 'email', 'Email' %>
                 <%= email_field_tag 'email', nil, class: 'form-control', required: 'required', placeholder: 'Your Email Address' %>
             </div>
             <div class="form-group">
                 <%= label_tag 'comments', 'Comments' %>
                 <%= text_area_tag 'comments', nil, class: 'form-control',required: 'required', rows: 4, placeholder: 'Comments...' %>
             </div>
             <%= recaptcha_tags ajax: true %><br>
             <%= submit_tag nil, value: "Send", class: 'btn btn-default' %>
             <button type="reset" class="btn btn-default">Reset</button>
              <% end %>
              <hr />
            </div>
          </div>
          <div class="col-md-6">
            <div class="cwell">
              <h4 class="title">Address</h4>
              <div class="address">
                <address>
                  <strong>PT Keruyuk Media Utama</strong><br>
                  Graha Rias Yenny Lt. 2<br>
                  Jl. Arya Mukti Barat no. 558<br>
                  Semarang 50196<br>
                  <abbr title="Phone">P:</abbr> (024) 671-0986.
                </address>
                <address>
                  <strong>Sales Dept.</strong><br>
                  <a href="mailto:#">sales@keruyuk.co.id</a>
                </address>
                <strong>Get in touch:</strong>
                <div class="social">
                  <a href="https://www.facebook.com/keruyuk"><i class="fa fa-facebook facebook"></i></a>
                  <a href="https://plus.google.com/101837163689193226753"><i class="fa fa-google-plus google-plus"></i></a>
                  <a href="https://twitter.com/KeruyukMedia"><i class="fa fa-twitter twitter"></i></a>
                </div>
              </div>
              <hr />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>